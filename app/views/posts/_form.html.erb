<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field"
  <div class="control">
    <%= f.input :post, label: "Leave post here", input_html: { class: "textarea "}, wrapper: false, label_html: 
      {class: "label"}, placeholder: "Compose a new post...", autofocus: true %>
  </div>
<%= f.button :submit, class: "button is-info" %>
</div>
<% end %>
